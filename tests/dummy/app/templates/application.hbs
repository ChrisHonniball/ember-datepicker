<div class="col-lg-10 col-lg-offset-1 col-md-12">
  <h2>Examples</h2>

  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title">Simple Inline Datepicker</div>
    </div>
  
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-6 col-xs-12">
          <div class="form-group">
            {{ember-datepicker value=example1}}
          </div>
        </div>
        
        <div class="col-sm-6 col-xs-12">
          <div class="form-group">
            {{#ember-highlight-code language="handlebars"}}
              \{{ember-datepicker value=example1}}
            {{/ember-highlight-code}}
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-xs-12">
          <pre>Value: {{example1}}</pre>
        </div>
      </div>
    </div>
  </div>
  
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title">Simple <code>&lt;input&gt;</code> Datepicker</div>
    </div>
  
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-6 col-xs-12">
          <div class="form-group">
            <div class="input-group">
              {{ember-datepicker
                id="example-2"
                class="form-control"
                inline=false
                value=example2
              }}
              <label class="input-group-addon" for="example-2"><i class="fa fa-calendar"></i></label>
            </div>
          </div>
        </div>
        
        <div class="col-sm-6 col-xs-12">
          <div class="form-group">
            {{#ember-highlight-code language="handlebars"}}
              &lt;div class="input-group"&gt;
                \{{ember-datepicker
                  id="example-2"
                  class="form-control"
                  inline=false
                  value=example2
                }}
                &lt;label class="input-group-addon" for="example-2"&gt;&lt;i class="fa fa-calendar"&gt;&lt;/i&gt;&lt;/label&gt;
              &lt;/div&gt;
            {{/ember-highlight-code}}
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-xs-12">
          <pre>Value: {{example2}}</pre>
        </div>
      </div>
    </div>
  </div>
  
