    <div class="panel-heading">
      <div class="panel-title">Inline with date markers</div>
    </div>
  
    <div class="panel-body">
      <h5 class="text-uppercase text-muted">Example</h5>
      <div class="row">
        <div class="col-sm-6 col-xs-12">
          <div class="form-group">
            {{ember-datepicker
              id="example-3"
              inline=true
              dateMarkers=dates
              value=example3
            }}
          </div>
        </div>
        
        <div class="col-sm-6 col-xs-12">
          <div class="form-group">
            {{#ember-highlight-code language="handlebars"}}
              \{{ember-datepicker
                id="example-3"
                class="form-control"
                inline=true
                dateMarkers=dates
                value=example3
              }}
            {{/ember-highlight-code}}
          </div>
          
          <div class="form-group">
            {{#ember-highlight-code language="css"}}
              .ember-datepicker .date-with-events {
                position: relative;
              }
              .ember-datepicker .date-with-events > a:after {
                position: absolute;
                top: 50%; left: 50%;
                margin: -16px 0px 0px -13px;
                font-size: 25px;
                content: '\2022';
                color: #aaa;
              }
            {{/ember-highlight-code}}
          </div>
        </div>
        
        <div class="clearfix"></div>
      </div>
      
      <div class="row">
        <div class="col-xs-12">
          <pre>Value: {{example3}}</pre>
        </div>
      </div>
    </div>
  </div>
  
